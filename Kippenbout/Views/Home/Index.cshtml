            <img src="~/Images/Chicken.jpg" width=150 height=150 />
        </div>
    </div>

</div>

@if (!User.Identity.IsAuthenticated)
{
    <p>
        Welkom bij Le Kippenbout!
        Om te reserveren heeft u bij ons eerst een account nodig.
    </p>

        <button class="btn btn-default">
            @Html.ActionLink("Klik hier om een account te maken!", "Register", "Account")
        </button>
    <button class="btn btn-default">
        @Html.ActionLink("Of log in", "Login", "Account")
    </button>
    
}





    ViewBag.Title = "Home Page";
}



<div class="jumbotron ">
    <div class="row">
        <div class="col-md-9">
            <h1>Le Kippenbout</h1>
            <p class="lead">Welkom bij het reserveringssysteem van Le Kippenbout!</p>
        </div>

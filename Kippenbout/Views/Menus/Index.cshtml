@model IEnumerable<Kippenbout.Models.Menu>

@{
    ViewBag.Title = "Index";
}

<h2>Menu overzicht</h2>
@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Menu aanmaken", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            Voorgerecht
        </th>
        <th>
            Hoofdgerecht
        </th>
        <th>
            Nagerecht
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prijs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            <span title=@Html.DisplayFor(ModelItem => item.Voorgerecht.Omschrijving)>
                @Html.DisplayFor(modelItem => item.Voorgerecht.Naam)
            </span>
        </td>
        <td>
            <span title= @Html.DisplayFor(ModelItem => item.Hoofdgerecht.Omschrijving)>
                @Html.DisplayFor(modelItem => item.Hoofdgerecht.Naam)
            </span>
        </td>
        <td>
            <span title=@Html.DisplayFor(ModelItem => item.Nagerecht.Omschrijving)>
                @Html.DisplayFor(modelItem => item.Nagerecht.Naam)
            </span>
        </td>
        <td>
          &euro;  @Html.DisplayFor(modelItem => item.Prijs)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            
            @if (User.IsInRole("Admin"))
            {
                <span>|</span>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })<span> |</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })<span> |</span>
                @Html.ActionLink("Gerechten aanpassen", "Index", "Gerecht")


            }
        </td>
    </tr>
}

</table>

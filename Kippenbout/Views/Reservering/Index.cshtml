@model IEnumerable<Kippenbout.Models.Reservering>

@{
    ViewBag.Title = "Index";
}

<h2>Reserveringen</h2>


<p>
    @Html.ActionLink("Maak een reservering aan", "Create")
</p>

@Html.CheckBox("OldRes", false)
@Html.DisplayName("Bekijk vorige reserveringen")

<br/>
<table class="table">
    <tr>
        
        <th>
            @Html.ActionLink("Naam", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Telefoonnummer", "Index", new { sortOrder = ViewBag.TelSortParm })
        </th>
        <th>
            @Html.ActionLink("Aantal Personen", "Index", new { sortOrder = ViewBag.PersonSortParm })
        </th>
        <th>
            @Html.ActionLink("Tafelnummer", "Index", new { sortOrder = ViewBag.TafelSortParm })
        </th>
        <th>
            @Html.ActionLink("Datum", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
           @Html.ActionLink("Totaal Prijs", "Index", new { sortOrder = ViewBag.PrijsSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact_Naam)
        </td>
        <td>
                @Html.DisplayFor(modelItem => item.Contact_Telefoonnummer)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Personen)
        </td>
        <td>
                @Html.DisplayFor(modelItem => item.Tafel_Nummer)
        </td>
        <td>
            @{
                var active2 = item.BeginDatum_tijd;
            }

            @Html.DisplayFor(modelItem => active2)
        </td>
        <td>
                &euro;  @Html.DisplayFor(modelItem => item.Prijs)
        </td>

            <td>
     
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                
            </td>
            
    </tr>
}
</table>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/Style.css")
    
    <style>
    .cog {
    color:white; 
    font-size: 1.8em; 
    margin-top: 4px;
    }

    .download {
    color:rgba(128, 128, 128, 0.41);
    font-size: 1.8em; 
    margin-top: 4px;
    }

    .download:hover{
        color:black;
    }

    .cog:hover {
        color:grey;
    }
    </style>

    <meta name="description" content="The description of my page" />
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="~/Images/Chicken.jpg" width=50 height=50 style="float:left" />
            @Html.ActionLink("Kippenbout", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Overzicht <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Menus bekijken", "Index", "Menus")</li>
                            <li>@Html.ActionLink("Reserveringen aanmaken", "Create", "Reservering")</li>
                            <li>@Html.ActionLink("Reservering bekijken", "Index", "Reservering")</li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin's overzicht <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Gerechten aanmaken", "Create", "Gerecht")</li>
                            <li>@Html.ActionLink("Gerechten bekijken", "Index", "Gerecht")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Menus aanmaken", "Create", "Menus")</li>
                            <li>@Html.ActionLink("Menus  bekijken", "Index", "Menus")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Reserveringen bekijken", "AdminIndex", "Reservering")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Rol toevoegen", "RoleCreate", "Account")</li>
                            <li>@Html.ActionLink("Rollen bekijken", "RoleIndex", "Account")</li>
                            <li>@Html.ActionLink("Rechten geven", "RoleAddToUser", "Account")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Klantbeheer", "Klantbeheer", "Manage")</li>
                        </ul>
                    </li>
                        
                }

                @if (User.IsInRole("Medewerker"))
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Medewerker's Overzicht <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Reserveringen bekijken", "AdminIndex", "Reservering")</li>
                            <li>@Html.ActionLink("Reserveringen aanmaken", "Create", "Reservering")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Menus bekijken", "Index", "Menus")</li>
                            <li>@Html.ActionLink("Gerechten bekijken", "Index", "Gerecht")</li>

                        </ul>
                    </li>
                }
                @if (User.IsInRole("Kok"))
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Kok's Overzicht <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Gerechten aanmaken", "Create", "Gerecht")</li>
                            <li>@Html.ActionLink("Gerechten bekijken", "Index", "Gerecht")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Menus aanmaken", "Create", "Menus")</li>
                            <li>@Html.ActionLink("Menus bekijken", "Index", "Menus")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Reserveringen bekijken", "AdminIndex", "Reservering")</li>
                        </ul>
                    </li>
                }

                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
    
   
<div class="container body-content">
        
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
                    
